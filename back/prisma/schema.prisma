generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  status        Boolean         @default(true)
  games userGames[]
}

model games {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  status        Boolean         @default(true)
  name String
}

type userGames {
     gameId String
     gameUserId String
}

